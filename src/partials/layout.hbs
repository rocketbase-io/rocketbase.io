        <!--[if IE]>
        <script>
            function resizeSvg(browserWidth) {
                $('.svg-responvie').each(function (i) {
                    var img = $(this);
                    var h = img.data('height'), w = img.data('width');
                    if (w > browserWidth) {
                        h = h * (browserWidth / w);
                        w = browserWidth;
                    }
                    img.css('height', h + 'px');
                });
            }

            $(document).ready(function () {
                resizeSvg($('.container').width());
            });
            $(window).resize(function () {
                resizeSvg($('.container').width());
            });
        </script>
